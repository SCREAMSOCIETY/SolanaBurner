modules = ["rust", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx webpack --config webpack.config.js && node server.js"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastifyServer"

[[workflows.workflow]]
name = "Project"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && node server.js"
waitForPort = 3000

[[workflows.workflow]]
name = "Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx webpack --config webpack.config.js"

[[workflows.workflow]]
name = "FastifyServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node fastifyServer.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
run = ["node", "fastifyServer.js"]
deploymentTarget = "autoscale"
build = ["npm", "install"]

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
localPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081

[[ports]]
localPort = 8082

[[ports]]
localPort = 8083

[[ports]]
localPort = 8084

[[ports]]
localPort = 8085

[[ports]]
localPort = 37445
externalPort = 3001

[agent]
expertMode = true
